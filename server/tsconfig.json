{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules*"]
    },
    "typeRoots": ["node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["src/**/*",],
  "exclude": ["node_modules"]
}
